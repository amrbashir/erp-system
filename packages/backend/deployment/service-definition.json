{
  "cluster": "{{aws_ecs_cluster}}",
  "serviceName": "{{aws_ecs_service}}",
  "taskDefinition": "{{aws_ecs_task_definition}}",
  "launchType": "FARGATE",
  "desiredCount": "2",
  "deploymentConfiguration": {
    "minimumHealthyPercent": 100,
    "maximumPercent": 200
  },
  "networkConfiguration": {
    "awsvpcConfiguration": {
      "subnets": ["{{aws_ecs_subnet_id_1}}", "{{aws_ecs_subnet_id_2}}"],
      "securityGroups": ["{{aws_ecs_security_group}}"],
      "assignPublicIp": "ENABLED"
    }
  },
  "loadBalancers": [
    {
      "targetGroupArn": "arn:aws:elasticloadbalancing:{{aws_region}}:{{aws_account_id}}:targetgroup/{{aws_lb_target_group_name}}/{{aws_lb_target_group_id}}",
      "containerName": "{{aws_ecs_container_name}}",
      "containerPort": "3000"
    }
  ]
}
