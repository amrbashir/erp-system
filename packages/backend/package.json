{
  "name": "@tech-zone-store/backend",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsdown",
    "dev": "docker compose up -d && tsdown --watch --config tsdown.config.dev.ts",
    "start": "node --env-file=.env dist/main.js",
    "start:dev": "node --env-file=.env.dev dist/main.js",
    "gen:openapi-json": "pnpm build && node --env-file=.env.dev dist/main.js gen-openapi-json",
    "test": "prisma generate && docker compose up -d && vitest run",
    "test:watch": "vitest",
    "lint": "prisma generate && tsc --noEmit"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.3",
    "@nestjs/core": "^11.1.3",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.3",
    "@nestjs/swagger": "^11.2.0",
    "@prisma/client": "^6.10.1",
    "@tech-zone-store/utils": "workspace:^",
    "argon2": "^0.43.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "express": "^5.1.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@nestjs/testing": "^11.1.3",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.4",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "dotenv": "^16.5.0",
    "prisma": "^6.10.1",
    "tsdown": "^0.12.9",
    "typescript": "^5.8.3",
    "unplugin-swc": "^1.5.5",
    "vite": "^7.0.0",
    "vitest": "^3.2.4"
  }
}
