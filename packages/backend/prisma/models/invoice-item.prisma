model InvoiceItem {
  id String @id @default(uuid())

  barcode         String?
  description     String
  purchasePrice   Decimal @db.Decimal(20, 4)
  sellingPrice    Decimal @db.Decimal(20, 4)
  price           Decimal @db.Decimal(20, 4)
  quantity        Int
  discountPercent Int     @default(0)
  discountAmount  Decimal @default(0) @db.Decimal(20, 4)
  subtotal        Decimal @db.Decimal(20, 4)
  total           Decimal @db.Decimal(20, 4)

  invoice   Invoice @relation(fields: [invoiceId], references: [id])
  invoiceId Int

  @@map("invoice_items")
}
