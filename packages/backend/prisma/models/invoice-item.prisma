model InvoiceItem {
  id String @id @default(uuid())

  barcode         String?
  description     String
  purchasePrice   Int
  sellingPrice    Int
  price           Int
  quantity        Int
  discountPercent Int     @default(0)
  discountAmount  Int     @default(0)
  subtotal        Int
  total           Int

  invoice   Invoice @relation(fields: [invoiceId], references: [id])
  invoiceId Int

  @@map("invoice_items")
}
