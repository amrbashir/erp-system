model InvoiceItem {
  id String @id @default(uuid())

  barcode          String?
  description      String
  purchase_price   Int
  selling_price    Int
  quantity         Int
  discount_percent Int     @default(0)
  discount_amount  Int     @default(0)
  subtotal         Int
  total            Int

  invoice   Invoice @relation(fields: [invoiceId], references: [id])
  invoiceId Int

  @@map("invoice_items")
}
