model Customer {
  id String @id @default(uuid())

  name  String
  email String?
  phone String?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  organization   Organization @relation(fields: [organizationId], references: [id])
  organizationId String

  invoices     Invoice[]
  transactions Transaction[]

  @@map("customers")
}
