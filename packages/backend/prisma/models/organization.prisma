model Organization {
  id String @id @default(uuid())

  name    String
  slug    String @unique
  balance Int    @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users        User[]
  stores       Store[]
  customers    Customer[]
  products     Product[]
  expenses     Expense[]
  invoices     Invoice[]
  transactions Transaction[]

  @@map("organizations")
}
