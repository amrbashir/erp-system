model Product {
  id Int @id @default(autoincrement())

  description    String
  purchase_price Int
  selling_price  Int
  stock_quantity Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  store   Store? @relation(fields: [storeId], references: [id])
  storeId Int?

  @@map("products")
}
