model Transaction {
  id String @id @default(uuid())

  amount Int

  invoice Invoice?
  expense Expense?

  createdAt DateTime @default(now())

  cashier   User   @relation(fields: [cashierId], references: [id])
  cashierId String

  store   Store  @relation(fields: [storeId], references: [id])
  storeId String

  @@map("transactions")
}
