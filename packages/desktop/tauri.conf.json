{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Tech Zone",
  "mainBinaryName": "tech-zone",
  "version": "0.1.0",
  "identifier": "com.tech-zone.app",
  "build": {
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm -w web build",
    "frontendDist": "../web/dist"
  },
  "app": {
    "windows": [
      {
        "title": "Tech Zone",
        "width": 800,
        "height": 600
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
