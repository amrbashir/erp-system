model Organization {
  id String @id @default(uuid())

  name    String
  slug    String  @unique
  balance Decimal @default(0) @db.Decimal(20, 4)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users        User[]
  customers    Customer[]
  products     Product[]
  expenses     Expense[]
  invoices     Invoice[]
  transactions Transaction[]

  @@map("organizations")
}
