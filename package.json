{
  "name": "erp-system",
  "private": true,
  "license": "MIT",
  "type": "module",
  "scripts": {
    "backend": "pnpm run --filter @erp-system/backend --",
    "web": "pnpm run --filter @erp-system/web --",
    "sdk": "pnpm run --filter @erp-system/sdk --",
    "utils": "pnpm run --filter @erp-system/utils --",
    "build:utils": "pnpm utils build && pnpm backend build && pnpm sdk build",
    "test": "pnpm build:utils && pnpm -r test",
    "lint": "pnpm build:utils && pnpm -r lint",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.4.2",
    "prettier": "^3.5.3"
  },
  "packageManager": "pnpm@10.12.1"
}
