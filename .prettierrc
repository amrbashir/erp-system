{
  "endOfLine": "lf",
  "singleQuote": false,
  "semi": true,
  "printWidth": 100,
  "useTabs": false,

  "overrides": [
    {
      "files": ["*.jsonc"],
      "options": {
        "trailingComma": "none"
      }
    }
  ],

  "plugins": ["@ianvs/prettier-plugin-sort-imports"],

  "importOrder": [
    "<TYPES>^(node:)",
    "<BUILTIN_MODULES>",
    "",
    "<THIRD_PARTY_MODULES>",
    "^@/shadcn/(.*)",
    "",
    "<TYPES>",
    "",
    "<TYPES>^@/(.*)",
    "^@/(.*)",
    "",
    "<TYPES>^[.]",
    "^[.]"
  ],
  "importOrderParserPlugins": ["typescript", "jsx", "decorators-legacy"]
}
